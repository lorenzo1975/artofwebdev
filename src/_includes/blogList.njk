<section class="py-8 container mx-auto" id="blog">
    <h4 class="text-md text-gray-500 mt-8 uppercase text-center">News, Articles and Thoughts</h4>
        <div class="flex w-full justify-center py-12 px-4">
            <div class="w-full lg:w-11/12 2xl:w-9/12">
    {% for post in collections.blog | reverse %}
                <div class="md:flex items-start">
                    <img class="mt-6 w-full md:w-auto object-cover object-center border-2" width="80" height="150" alt="thumbnail" src="{{ post.data.featuredImage }}" />
                    <div class="pt-8 md:pl-8 lg:pl-16 lg:pt-4 pb-4">
                        <div class="flex items-center">
                            <p class="text-sm lg:text-base leading-none uppercase text-gray-500 dark:text-gray-300">{{ post.data.category }}</p>
                            <div class="w-1 h-1 bg-gray-500 dark:bg-gray-300 rounded-full mx-2"></div>
                            <p class="text-sm lg:text-base leading-none text-gray-500 dark:text-gray-300">{{ post.data.date | prettyDate }}</p>
                        </div>
                        <div class="py-2 xl:py-4">
                            <a href="javascript:void(0)">
                                <p class="text-2xl lg:text-4xl font-bold xl:leading-10 text-gray-900 dark:text-gray-50">
                                  <a href="{{ post.url }}">{{ post.data.title }}</a>  
                                </p>
                            </a>
                        </div>
                        <div>
                            <div class="text-base lg:text-lg leading-7 text-gray-600 dark:text-gray-400">
                                <p>{{ post.data.description }}</p>
                            </div>
                        </div>
                        <div class="w-full justify-between mt-4 items-center">
                            <div class="md:-mx-2 flex items-center flex-wrap">
                                {% for tag in post.data.stags %}
                                <div class="flex items-center justify-center p-2 md:m-2 my-2 mr-2 bg-gray-200 dark:bg-gray-800 rounded">
                                    <p class="text-sm lg:text-base leading-none text-gray-600 dark:text-gray-300">{{ tag }}</p>
                                </div>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
        {% endfor %}
            </div>
        </div>
</section>